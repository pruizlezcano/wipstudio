# App Configuration
APP_URL=http://localhost:3000

# Authentication
BETTER_AUTH_SECRET=some-very-secure-and-random-string
# Set to true to require email verification on sign up
REQUIRE_EMAIL_VERIFICATION=false
# Set to true to disable sign up entirely
DISABLE_SIGN_UP=false
# Set to true to disable email/password authentication (only OIDC will be available)
DISABLE_EMAIL_PASSWORD_AUTH=false

# OIDC Authentication
OPENID_NAME=My OpenID Provider
OPENID_ID=my-openid
OPENID_CLIENT_ID=client-id
OPENID_CLIENT_SECRET=client-secret
OPENID_REDIRECT_URI=http://localhost:3000/api/auth/oauth2/callback/my-openid
OPENID_DISCOVERY_URL=https://auth.example.com/.well-known/openid-configuration
OPENID_SCOPES=openid profile email

# Database

# Database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=backstage
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/backstage

# S3
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY_ID=access-key
S3_SECRET_ACCESS_KEY=secret-key
S3_BUCKET=backstage-uploads
S3_REGION=us-east-1

# File Upload
# Leave unset or set to a very large value to disable chunking
UPLOAD_CHUNK_SIZE=5242880 # 5 MB

# Email Configuration
# Set to true to enable email sending
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Backstage <noreply@backstage.app>"
